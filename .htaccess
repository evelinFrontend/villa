#Tipo habitacion 
RewriteRule ^createType$ index.php?controller=tipoHabitacion&a=createType
RewriteRule ^UpdateTypeRoom$ index.php?controller=tipoHabitacion&a=UpdateTypeRoom
RewriteRule ^deleteTypeRoom$ index.php?controller=tipoHabitacion&a=deleteTypeRoom
RewriteRule ^readByTypeRoom$ index.php?controller=tipoHabitacion&a=readByTypeRoom

